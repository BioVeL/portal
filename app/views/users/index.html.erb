<% content_for :title, "BioVeL Portal - Users"%>
<h1>User Management</h1>
<p>
  This page shows users registered on BioVeL Portal
</p>

<table id="biovel_users_table" class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Admin</th>
      <th>Runs Count</th>
      <th>Monthly run average</th>
      <th>First run</th>
      <th>Latest run</th>
      <th>Latest workflow</th>
      <th>BioVeL</th>
      <th>User Type</th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= unless (user.id == 0)
                link_to(user.name, edit_user_path(user))
              else
                user.name
              end
            %></td>
      <td><%= user.email %></td>
      <td><%= user.admin	 %></td>
      <td><%= user.user_statistic.run_count %></td>
      <td><%= user.user_statistic.mothly_run_average %></td>
      <td><%= user.user_statistic.first_run_date %></td>
      <td><%= user.user_statistic.last_run_date %></td>
      <td><%= user.user_statistic.latest_workflow_id %></td>
      <td><%= user.biovel %></td>
      <td><%= user.type_id %></td>
    </tr>
  <% end %>
  </tbody>
</table>
