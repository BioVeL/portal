<%= form_for(@workflow,
  :url => {:action => "update"},
  :html => { :multipart => true,
  :method =>:put}) do |f| %>
  <% if @workflow.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@workflow.errors.count, "error") %> prohibited this workflow from being saved:</h2>

      <ul>
      <% @workflow.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :my_experiment_id %><br />
    <%= f.text_field :my_experiment_id %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :my_experiment_id %><br />
    <%= f.text_field :my_experiment_id %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :workflow_file %>:  <%= @workflow.workflow_file %><br />
    <%= f.file_field :wf_file%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
