<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="http://www.biovel.eu">
        <img src="/assets/biovel.png"/> BioVeL Portal
      </a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <%= navigation_link('Home', root_path, 'icon-home', controller_name == 'welcome') -%>
          <%= navigation_link('Workflows', workflows_path, 'icon-cog', controller_name == 'workflows') -%>
          <%= navigation_link('Runs', runs_path, 'icon-play', controller_name == 'runs') -%>

          <% if user_signed_in? && current_user.admin %>
            <%= navigation_link('Settings', credentials_path, 'icon-wrench', controller_name == 'credentials') -%>
            <%= navigation_link('Announcements', announcements_path, 'icon-bullhorn', controller_name == 'announcements') -%>
            <%= navigation_link('Users', users_path, 'icon-user', controller_name == 'users') -%>
          <% end %>
        </ul>
        <ul class="nav pull-right">
          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <b class="icon-user"></b>
              <%= user_signed_in? ? current_user.name : 'Log in / Register' %>
              <b class="caret"></b>
            </a>
            <% if user_signed_in? %>
              <ul class="dropdown-menu">
                <li><%= link_to "Log out", destroy_user_session_path, :method => :delete %></li>
              </ul>
            <% else %>
              <ul class="dropdown-menu">
                <div style="padding: 15px"><%= render :partial => 'devise/sessions/form' %></div>
                <li><%= link_to "Register", new_registration_path(:user) %></li>
                <li><%= link_to "Forgot your password?", new_password_path(:user) %></li>
              </ul>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
